import psutil
import time

# Set CPU usage threshold
THRESHOLD = 80  

print("Monitoring CPU usage... (Press Ctrl+C to stop)")

try:
    while True:
        usage = psutil.cpu_percent(interval=1)  # check every 1 second
        if usage > THRESHOLD:
            print(f"⚠️ Alert! CPU usage exceeds threshold: {usage}%")
        else:
            print("Monitoring CPU usage...")
except KeyboardInterrupt:
    print("\nMonitoring stopped by user.")
except Exception as e:
    print(f"Error: {e}")
