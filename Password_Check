import re

def check_password_strength(password: str) -> bool:
    """
    Check the strength of a password based on given criteria:
    - At least 8 characters
    - Contains uppercase and lowercase letters
    - Contains at least one digit
    - Contains at least one special character
    """
    if len(password) < 8:
        return False
    if not re.search(r"[A-Z]", password):  # Uppercase check
        return False
    if not re.search(r"[a-z]", password):  # Lowercase check
        return False
    if not re.search(r"\d", password):     # Digit check
        return False
    if not re.search(r"[!@#$%^&*(),.?\":{}|<>]", password):  # Special character check
        return False
    return True


if __name__ == "__main__":
    user_password = input("Enter a password to check its strength: ")

    if check_password_strength(user_password):
        print("✅ Strong password! Your password meets all security requirements.")
    else:
        print("❌ Weak password. Please ensure it has at least 8 characters, "
              "with uppercase, lowercase, a digit, and a special character.")
